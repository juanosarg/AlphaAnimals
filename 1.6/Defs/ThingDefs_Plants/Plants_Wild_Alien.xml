	<!--============================ Trees ============================-->
	<ThingDef ParentName="PlantBase">
		<defName>AA_AlienTree</defName>
		<label>ocular tree</label>
		<description>This tree is completely otherworldly, probably not even 100% carbon based, and it seems to be struggling to grow from exposure to a terrestrial environment. Strange fruits resembling eyeballs hang from the tree, but they are probably not edible. Its wood releases a powerful, sweet scent. Perhaps it can be somehow useful?</description>
		<descriptionHyperlinks>
			<ThingDef>GU_RedWood</ThingDef>
		</descriptionHyperlinks>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<Flammability>0.8</Flammability>
			<Nutrition>0.1</Nutrition>
			<Mass>150</Mass>
		</statBases>
		<graphicData>
			<texPath>Things/Plants/AB_OcularTree</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.24, 0.3, 0.15)</volume>
				<offset>(0,0,-0.38)</offset>
			</shadowData>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<selectable>true</selectable>
		<fillPercent>0.35</fillPercent>
		<passability>PassThroughOnly</passability>
		<pathCost>130</pathCost>
		<blockWind>true</blockWind>
		<rotatable>false</rotatable>
		<ingestible>
			<foodType>Tree</foodType>
			<preferability>RawBad</preferability>
		</ingestible>
		<plant>
			<fertilityMin>0.05</fertilityMin>
			<fertilitySensitivity>0</fertilitySensitivity>
			<growDays>5</growDays>
			<treeCategory>Full</treeCategory>
			<soundHarvesting>Harvest_Tree</soundHarvesting>
			<soundHarvestFinish>Harvest_Tree_Finish</soundHarvestFinish>
			<harvestWork>300</harvestWork>
			<harvestedThingDef>GU_RedWood</harvestedThingDef>
			<harvestTag>Wood</harvestTag>
			<harvestYield>10</harvestYield>
			<harvestMinGrowth>0.2</harvestMinGrowth>
			<harvestFailable>false</harvestFailable>
			<visualSizeRange>3~3.75</visualSizeRange>
			<topWindExposure>0.3</topWindExposure>
		</plant>
	</ThingDef>
</Defs>
